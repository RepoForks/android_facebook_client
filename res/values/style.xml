<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="headerText" >
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowRadius">2</item>
	</style>
	
	<style name="footerText" >
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowRadius">2</item>
	</style>
	
	<style name="contentText" >
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textColorLink">#37589B</item>
		<item name="android:textColorHighlight">#D0D0D0</item>
	</style>
	
	<style name="contentTextBold" parent="@style/contentText" >
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="contentTextSmall" parent="@style/contentText" >
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#5A5A5A</item>
	</style>
	
	<style name="headerContainer" parent="@style/headerText" >
		<item name="android:padding">5dp</item>
		<item name="android:background">@drawable/bg_header</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:id">@+id/header</item>
	</style>
	
	<style name="headerIcon" >
		<item name="android:layout_width">30dp</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:layout_marginRight">2dp</item>
		<item name="android:src">@drawable/pic_application_small</item>
	</style>
	
	<style name="footerContainer" parent="@style/footerText" >
		<item name="android:padding">5dp</item>
		<item name="android:background">@drawable/bg_footer</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:id">@+id/footer</item>
	</style>
	
	<style name="contentContainer" parent="@style/contentText" >
		<item name="android:background">@drawable/bg_content</item>
		<item name="android:layout_below">@id/header</item>
		<item name="android:layout_above">@id/footer</item>
	</style>
	
	<style name="footerButton" parent="@style/footerText" >
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:background">@drawable/bg_footer_button</item>
	</style>
	
	<style name="button" parent="@style/headerText" >
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:background">@drawable/bg_button</item>
	</style>
	
	<style name="separator" parent="@style/contentTextSmall" >
		<item name="android:textStyle">bold</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:background">@drawable/bg_separator</item>
	</style>
	
	<style name="editText" parent="@style/contentContainer" >
		<item name="android:padding">5dp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColorHighlight">#E0C080</item>
	</style>
	
</resources>
